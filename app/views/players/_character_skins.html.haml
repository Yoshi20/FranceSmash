- if character.present? && skin_nr.present? && character != 'random'
  .row{style: 'margin-bottom: 1rem;'}
    .col
      - files = Dir.entries("#{Rails.root}/public/character_skins").map{|f| f if f[0] != '.' && f[0..-8] == character}.compact.sort
      - files.each_with_index do |file, i|
        - character_skin_nr = file.sub('.png', '').split('_')[-1].to_i
        = image_tag "/character_skins/#{file}", height: '25px', width: '25px'
        = radio_button("main_char_skin#{skin_nr.to_s}", nil, character_skin_nr, style: 'margin-left: -3px; margin-right: 8px;')#blup , checked: ((@player.main_character_skins[skin_nr-1] == character_skin_nr) ? 'checked' : ''))
