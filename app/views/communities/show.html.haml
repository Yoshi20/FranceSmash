.community
  .row
    .col
      - if @community.region.present?
        .tooltip
          = image_tag "regions/#{@community.region}.svg", height: '25px', width: '25px', style: 'position: absolute; top: 10px;'
          %span.tooltiptext
            = t("defines.regions.#{@community.region}")
      .page__title
        %h1
          = @community.name
        - logos_shown = 0
        - if @community.discord.present?
          .tooltip{style: 'position: absolute; top: 0px; right: 0px; z-index: 1;'}
            = link_to image_tag('Discord-Logo-Black.svg', id: 'copy_discord_name', height: '35px', width: '35px'), '#', 'data-value': @community.discord, class: 'tooltip', style: 'position: absolute; top: 5px; right: 0px;'
            %span.tooltiptext{style: 'margin-left: -78px;'}
              = @community.discord
          - logos_shown = logos_shown + 1;
        - if @community.twitter.present?
          = link_to image_tag('Twitter_Logo.svg', height: '35px', width: '35px'), "https://twitter.com/#{@community.twitter}", target: '_blank', style: "position: absolute; top: 5px; right: #{logos_shown*35}px;"
          - logos_shown = logos_shown + 1;
        - if @community.instagram.present?
          = link_to image_tag('Instagram_Logo.png', height: '35px', width: '35px'), "https://www.instagram.com/#{@community.instagram}", target: '_blank', style: "position: absolute; top: 5px; right: #{logos_shown*35}px;"
          - logos_shown = logos_shown + 1;
        - if @community.facebook.present?
          = link_to image_tag('Facebook_Logo.svg', height: '35px', width: '30px'), "https://www.facebook.com/#{@community.facebook}", target: '_blank', style: "position: absolute; top: 5px; right: #{logos_shown*35}px;"
          - logos_shown = logos_shown + 1;

    -# admin actions -------------------------------------------------------------
    - if current_user.present? && current_user.admin?
      .admin-actions
        .admin-actions__link
          = link_to edit_community_path(@community), class:'btn btn-default btn-square' do
            %span.material-icons.admin-actions__link__icon= 'edit'

  .community__stats
    .row
      - if @community.department.present?
        .col
          .community__stats__single{class: (@community.city.nil?) ? 'community__stats__single--last' : ''}
            %strong
              = @community.department
            %span
              = t('communities.department')
      - if @community.city.present?
        .col
          .community__stats__single.community__stats__single--last
            %strong
              = @community.city
            %span
              = t('communities.city')

  - if @discord_invites_json.any?
    .community__stats
      .row
        .col
          .community__stats__single.community__stats__single--last
            .discord_invites{style: 'justify-content: center; display: grid;'}
              - @discord_invites_json.each do |discord_invite|
                .row{style: 'margin-bottom: 1rem;'}
                  .col
                    = render '/partials/discord_invite', discord_invite: discord_invite
            %span{style: 'margin-top: -10px;'}
              = (@discord_invites_json.count > 1 ? "Discords" : "Discord")

  - if @community.twitch.present? || @community.youtube.present?
    .community__media_channels
      .row
        - if @community.twitch.present?
          .col{style: 'text-align: center;'}
            = link_to image_tag('TwitchExtrudedWordmarkPurple.svg', height: '60px'), "https://www.twitch.tv//#{@community.twitch}", target: '_blank', class: 'nav-link', style: 'margin-top: 5px; margin-right: 5px;'
        - if @community.youtube.present?
          .col{style: 'text-align: center;'}
            = link_to image_tag('Youtube_Logo_Dark.png', height: '60px'), "https://www.youtube.tv//#{@community.youtube}", target: '_blank', class: 'nav-link', style: 'margin-top: 5px; margin-right: 5px;'
